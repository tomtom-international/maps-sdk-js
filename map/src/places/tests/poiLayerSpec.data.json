{
  "id": "POI",
  "layout": {
    "icon-image": "{icon}",
    "icon-padding": 5,
    "icon-size": {
      "stops": [
        [10, 0.7],
        [18, 1]
      ]
    },
    "symbol-placement": "point",
    "symbol-sort-key": ["get", "priority"],
    "symbol-z-order": "auto",
    "text-field": "{name}\n{sub_text}",
    "text-font": ["Noto-Regular"],
    "text-size": [
      "step",
      ["zoom"],
      ["/", 14, ["log10", ["max", ["length", ["get", "name"]], 30]]],
      10,
      ["/", 16, ["log10", ["max", ["length", ["get", "name"]], 30]]]
    ]
  },
  "paint": {
    "text-color": [
      "case",
      ["boolean", ["feature-state", "hover"], false],
      [
        "match",
        ["get", "category"],
        "automotive_dealer",
        "hsl(210, 2%, 55%)",
        "car_wash",
        "hsl(210, 2%, 55%)",
        "electric_vehicle_station",
        "hsl(210, 2%, 55%)",
        "motoring_organization_office",
        "hsl(210, 2%, 55%)",
        "open_parking_area",
        "checkpoint",
        "hsl(210, 2%, 55%)",
        "hsl(210, 2%, 55%)"
      ],
      [
        "match",
        ["get", "category"],
        "automotive_dealer",
        "hsl(210, 2%, 48%)",
        "car_wash",
        "hsl(210, 2%, 48%)",
        "electric_vehicle_station",
        "hsl(210, 2%, 48%)",
        "motoring_organization_office",
        "hsl(210, 2%, 48%)",
        "open_parking_area",
        "hsl(210, 2%, 48%)",
        "parking_garage",
        "hsl(210, 2%, 48%)",
        "checkpoint",
        "hsl(210, 2%, 48%)",
        "hsl(210, 2%, 48%)"
      ]
    ],
    "text-halo-color": "hsl(0, 0%, 100%)",
    "text-halo-width": 1
  },
  "source": "poiTiles",
  "source-layer": "poi_extended",
  "type": "symbol"
}
