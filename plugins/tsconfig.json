{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["vite/client", "react", "react-dom", "vitest/globals", "node"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@tomtom-org/maps-sdk/core": ["../core/dist"],
      "@tomtom-org/maps-sdk/map": ["../map/dist"],
      "@tomtom-org/maps-sdk/services": ["../services/dist"]
    }
  }
}
