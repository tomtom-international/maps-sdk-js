{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "outDir": ".",
    "target": "ES6",
    "paths": {
      "@anw/maps-sdk-js/core": ["./core"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules", "rollup.config.ts", ".rollup.cache/", "dist", "__mocks__"]
}
