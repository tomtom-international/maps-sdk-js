{
  "compilerOptions": {
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    //"rootDir": "./src",
    //"exclude": ["**/*.js", "node_modules/", "dist/"]
  }
}
