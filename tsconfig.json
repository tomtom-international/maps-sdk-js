{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["**/*.js", "node_modules/", "dist/"]
}
